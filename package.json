{
  "name": "depjs",
  "version": "0.1.0",
  "description": "DepJS compiler - a functional JavaScript subset with first-class types",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "depjs": "dist/cli.js",
    "depjs-repl": "dist/repl.js"
  },
  "scripts": {
    "build": "tsc",
    "build:parser": "lezer-generator src/parser/depjs.grammar --typeScript -o src/parser/parser.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "repl": "tsx src/repl.ts",
    "cli": "tsx src/cli.ts",
    "depjs": "tsx src/cli.ts"
  },
  "devDependencies": {
    "@lezer/generator": "^1.7.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.10",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@lezer/common": "^1.2.0",
    "@lezer/highlight": "^1.2.0",
    "@lezer/javascript": "^1.5.4",
    "@lezer/lr": "^1.4.0"
  }
}
