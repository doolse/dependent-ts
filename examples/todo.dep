import { jsx, jsxs } from "react/jsx-runtime" in
import { useState } from "react" in
  fn(props) =>
    let [todos, setTodos] = useState([]) in
    let [inputText, setInputText] = useState("") in
    <div style={{ fontFamily: "system-ui", padding: "20px", maxWidth: "500px", margin: "0 auto" }}>
      <h1>TODO App (from dependent-ts)</h1>
      <div style={{ display: "flex", marginBottom: "20px" }}>
        <input
          type="text"
          value={inputText}
          placeholder="Enter a todo..."
          style={{ flex: 1, padding: "10px", fontSize: "16px" }}
          onChange={fn(e) => setInputText(e.target.value)}
        />
        <button
          style={{ padding: "10px 20px", fontSize: "16px", marginLeft: "10px", cursor: "pointer" }}
          onClick={fn() =>
            if inputText != "" then
              let newTodo = { id: todos.length, text: inputText, completed: false } in
              let _ = setTodos(todos.concat([newTodo])) in
              setInputText("")
            else
              null
          }>
          Add
        </button>
      </div>
      <ul style={{ listStyle: "none", padding: 0 }}>
        {todos.map(fn(todo) =>
          <li
            key={todo.id}
            style={{
              padding: "10px",
              marginBottom: "5px",
              backgroundColor: "#f5f5f5",
              display: "flex",
              alignItems: "center",
              justifyContent: "space-between"
            }}>
            <div style={{ display: "flex", alignItems: "center", flex: 1 }}>
              <input
                type="checkbox"
                checked={todo.completed}
                style={{ marginRight: "10px", cursor: "pointer" }}
                onChange={fn() =>
                  setTodos(todos.map(fn(t) =>
                    if t.id == todo.id then
                      { id: t.id, text: t.text, completed: !t.completed }
                    else
                      t
                  ))
                }
              />
              <span style={if todo.completed then { textDecoration: "line-through", color: "#888" } else {}}>
                {todo.text}
              </span>
              <button
                style={{
                  marginLeft: "auto",
                  padding: "5px 10px",
                  cursor: "pointer",
                  backgroundColor: "#ff4444",
                  color: "white",
                  border: "none",
                  borderRadius: "3px"
                }}
                onClick={fn() => setTodos(todos.filter(fn(t) => t.id != todo.id))}>
                Delete
              </button>
            </div>
          </li>
        )}
      </ul>
      {if todos.length > 0 then
        <p style={{ color: "#666", marginTop: "20px" }}>
          {("Total: " + todos.length.toString()) + " items"}
        </p>
      else
        <p style={{ color: "#999", marginTop: "20px", fontStyle: "italic" }}>
          No todos yet. Add one above!
        </p>
      }
    </div>
