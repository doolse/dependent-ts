{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@dependent-ts/core": ["./packages/core/src/index.ts"],
      "@dependent-ts/core/*": ["./packages/core/src/*"]
    }
  },
  "include": ["test/**/*", "docs/**/*"],
  "references": [
    { "path": "./packages/core" }
  ]
}
